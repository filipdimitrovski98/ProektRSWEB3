@model Project_1_Final.ViewModels.UnEnrollMultipleViewModel
@{
    ViewData["Title"] = "UnEnrollMultiple";
}

<h1>UnEnrollMultiple</h1>

<div class="row">
  <div class="col-md-4">
      <form asp-action="UnEnrollMultiple">

          <div class="form-group">
              <label class="control-label">Students</label>
              <select asp-for="SelectedStudents" class="form-control js-example-basic-multiple" asp-items="Model.StudentsList"></select>
              <span asp-validation-for="SelectedStudents" class="text-danger"></span> 
          </div>
          <div class="form-group">
              <input type="submit" value="Save" class="btn btn-primary" />
          </div>
      </form>
  </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#SelectedStudents").select2();
        });
    </script>
}
@model Project_1_Final.ViewModels.EnrollMultipleViewModel

@{
    ViewData["Title"] = "EnrollMultiple";
}

<h1>EnrollMultiple</h1>

<h4>Enrollment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EnrollMultiple">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <input asp-for="NewEnrollment.CourseId" value="@ViewData["chosenId"]" class="form-control" readonly type="hidden" />
            </div>

            <div class="form-group">
                <label asp-for="NewEnrollment.Semester" class="control-label"></label>
                <input asp-for="NewEnrollment.Semester" class="form-control" />
                <span asp-validation-for="NewEnrollment.Semester" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewEnrollment.Year" class="control-label"></label>
                <input asp-for="NewEnrollment.Year" class="form-control" />
                <span asp-validation-for="NewEnrollment.Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Students</label>
                <select asp-for="SelectedStudents" class="form-control js-example-basic-multiple" asp-items="Model.StudentsList"></select>
                <span asp-validation-for="SelectedStudents" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="NewEnrollment.Grade" class="form-control" readonly type="hidden" />
                <span asp-validation-for="NewEnrollment.Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="NewEnrollment.SeminalUrl" class="form-control" readonly type="hidden" />
                <span asp-validation-for="NewEnrollment.SeminalUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="NewEnrollment.ProjectUrl" class="form-control" readonly type="hidden" />
                <span asp-validation-for="NewEnrollment.ProjectUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="NewEnrollment.ExamPoints" class="form-control" readonly type="hidden" />
                <span asp-validation-for="NewEnrollment.ExamPoints" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="NewEnrollment.SeminalPoints" class="form-control" readonly type="hidden" />
                <span asp-validation-for="NewEnrollment.SeminalPoints" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="NewEnrollment.ProjectPoints" class="form-control" readonly type="hidden" />
                <span asp-validation-for="NewEnrollment.ProjectPoints" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="NewEnrollment.AdditionalPoints" class="form-control" readonly type="hidden" />
                <span asp-validation-for="NewEnrollment.AdditionalPoints" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="EnrollMultiple" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#SelectedStudents").select2();
        });
    </script>
}
